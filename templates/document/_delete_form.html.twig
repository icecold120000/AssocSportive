<form method="post" action="{{ path('document_delete', {'id': document.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce document ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document.id) }}">
    <button class="btn btn-danger" id="btnSuppr">Supprimer</button>
</form>
