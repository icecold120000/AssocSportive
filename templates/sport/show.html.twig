{% extends 'base.html.twig' %}

{% block title %}Sport{% endblock %}

{% block body %}
    <h1>Suppression d'un sport</h1>

    <p>Cliquez sur le boutton Supprimer pour supprimer le sport choisi: {{sport.nomSport}}</p>

    <div id="warning">
        <p><i class="fas fa-exclamation-triangle"></i> Attention : tous les événements qui utilisent ce sport</p>
        <p>vont être changé à la valeur "aucun"</p>
    </div>

    {{ include('sport/_delete_form.html.twig') }}

    <div>
        <a href="{{ path('sport_index') }}">
            <button class="btn btn-secondary" id="btnRetour">
                Revenir dans la liste
            </button>
        </a>
    </div>
{% endblock %}