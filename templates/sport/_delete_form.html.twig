<form method="post" action="{{ path('sport_delete', {'id': sport.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce sport ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sport.id) }}">
    <button class="btn btn-danger" id="btnSuppr">Supprimer</button>
</form>
