{% extends 'base.html.twig' %}

{% block title %}Liste des sports{% endblock %}

{% block body %}
    <h1>Liste des sports</h1>
    <div>
        <a href="{{ path('sport_new') }}">
            <button class="btn btn-primary" id="btnAjout">
                Ajouter un nouveau sport
            </button>
        </a>
        <a href="{{ path('admin_index') }}">
            <button class="btn btn-secondary" id="btnRetour">
                Retourner dans la liste de fonctionnalité
            </button>
        </a>
    <div>
    <table class="table tableAdmin">
        <thead>
            <tr>
                <th>Nom du sport</th>
                <th>Editer</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for sport in sports %}
            <tr>
                <td>{{ sport.nomSport }}</td>
                <td>
                    <a href="{{ path('sport_edit',
                    {'id': sport.id}) }}">
                        <button class="btn btn-primary">
                            <i class="far fa-edit"></i>
                        </button>
                    </a>
                </td>
                <td>
                    <a href="{{ path('sport_delete',
                     {'id': sport.id}) }}">
                        <button class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </button>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune donnée n'a été trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
