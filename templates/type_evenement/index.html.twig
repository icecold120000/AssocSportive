{% extends 'base.html.twig' %}

{% block title %}Liste de type d'événement{% endblock %}

{% block body %}
    <h1>Liste de type d'événement</h1>
    <div>
        <a href="{{ path('type_evenement_new') }}"> 
            <button class="btn btn-primary" id="btnAjout">
                Ajouter un type d'événement
            </button>
        </a>
        <a href="{{ path('admin_index') }}">
            <button class="btn btn-secondary" id="btnRetour">
                Retourner dans la liste de fonctionnalité
            </button>
        </a>
    <div>
    <div>
        {{ knp_pagination_render(type_evenements) }}
    </div>
    <table class="table tableAdmin">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Editer</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for type_evenement in type_evenements %}
            <tr>
                <td>{{ type_evenement.nom }}</td>
                <td>
                    <a href="{{ path('type_evenement_edit',
                    {'id': type_evenement.id}) }}">
                        <button class="btn btn-primary">
                            <i class="far fa-edit"></i>
                        </button>
                    </a>
                </td>
                <td>
                    <a href="{{ path('type_evenement_delete',
                     {'id': type_evenement.id}) }}">
                        <button class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </button>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune donnée n'a été trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div>
        {{ knp_pagination_render(type_evenements) }}
    </div>
{% endblock %}
